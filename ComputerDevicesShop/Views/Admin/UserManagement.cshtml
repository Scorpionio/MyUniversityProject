@model ComputerDevicesShop.Models.DTOs.UserManagementDTO

@if (Model.ProfileRole.User.RoleId == 3)
{
    <div class="form__inner">
        <h2 class="form__title">Назначить пользователя </h2>
        <form class="form__box" asp-action="UserToAdmin" asp-controller="Admin" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="acconut__input">
                <div class="form-group form-valid">
                    <label asp-for="@Model.DoAdminModel.UserToAdminEmail">Введите почту пользователя, которого хотите назначить администратором</label>
                    <input type="text" asp-for="@Model.DoAdminModel.UserToAdminEmail" />
                    <span asp-validation-for="@Model.DoAdminModel.UserToAdminEmail"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Подтвердить" class="button" />
                </div>
            </div>
        </form>
    </div>

    <div class="form__inner">
        <h2 class="form__title">Зарегистрировать нового администратора</h2>
        <form class="form__box" asp-action="RegisterAdmin" asp-controller="Admin" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="acconut__input">
                <div class="form-valid">
                    <label asp-for="@Model.AddAdminModel.Name">Введите имя</label><br />
                    <input type="text" asp-for="@Model.AddAdminModel.Name" />
                    <span asp-validation-for="@Model.AddAdminModel.Name"></span>
                </div>
                <div class="form-valid">
                    <label asp-for="@Model.AddAdminModel.Email">Введите почту</label><br />
                    <input type="text" asp-for="@Model.AddAdminModel.Email" />
                    <span asp-validation-for="@Model.AddAdminModel.Email"></span>
                </div>
                <div class="form-valid">
                    <label asp-for="@Model.AddAdminModel.Password">Введите пароль</label><br />
                    <input asp-for="@Model.AddAdminModel.Password" />
                    <span asp-validation-for="@Model.AddAdminModel.Password"></span>
                </div>
                <div class="form-valid">
                    <label asp-for="@Model.AddAdminModel.ConfirmPassword">Повторите пароль</label><br />
                    <input asp-for="@Model.AddAdminModel.ConfirmPassword" />
                    <span asp-validation-for="@Model.AddAdminModel.ConfirmPassword"></span>
                </div>
                <div>
                    <input class="button" type="submit" value="Регистрация" />
                </div>
            </div>
        </form>
    </div>
}


<div class="form__inner">
    <h2 class="form__title">Удалить пользователя</h2>
    <form class="form__box" asp-action="DeleteUser" asp-controller="Admin" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="acconut__input">
            <div class="form-group form-valid">
                <label asp-for="@Model.DeleteUserModel.DeleteUserEmail">Введите почту пользователя, которого хотите удалить</label>
                <input type="text" asp-for="@Model.DeleteUserModel.DeleteUserEmail" />
                <span asp-validation-for="@Model.DeleteUserModel.DeleteUserEmail"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Подтвердить" class="button" />
            </div>
        </div>
    </form>
</div>