@model ComputerDevicesShop.Models.DTOs.CheckoutModel
@{
	var UserAuth = ViewBag.UserAuth as string;
}
<form asp-action="Checkout" class="form__box block">
	<h2>Оформление заказа</h2>
	<div class="validation" asp-validation-summary="ModelOnly"></div>
	<div class="acconut__input">
		<div class="form-group form-valid">
			<label asp-for="Name">Имя:	</label>
			<input asp-for="Name" type="text" value="" />
			<span asp-validation-for="Name" />
		</div>
		<div class="form-group form-valid">
			<label asp-for="Email">Почта:	</label>
			<input asp-for="Email" type="text" value="" />
			<span asp-validation-for="Email" />
		</div>
		<div class="form-group form-valid">
			<label asp-for="MobileNumber">Номер:	</label>
			<input asp-for="MobileNumber" type="text" value="" />
			<span asp-validation-for="MobileNumber" />
		</div>
		<div class="form-group form-valid">
			<label asp-for="Address">Адрес:	</label>
			<input asp-for="Address" type="text" value="" />
			<span asp-validation-for="Address" />
		</div>
		<button type="submit">Подтвердить</button>
	</div>
</form>