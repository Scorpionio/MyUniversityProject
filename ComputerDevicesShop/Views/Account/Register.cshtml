@model ComputerDevicesShop.Models.DTOs.RegisterModel

<div class="form__inner">
    <h2 class="form__title">Регистрация</h2>
    <form class="form__box" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="acconut__input">
            <div class="form-valid">
                <label asp-for="Name">Введите имя</label><br />
                <input type="text" asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-valid">
                <label asp-for="Email">Введите почту</label><br />
                <input type="text" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-valid">
                <label asp-for="Password">Введите пароль</label><br />
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-valid">
                <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                <input asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div>
                <input class="button" type="submit" value="Регистрация" />
            </div>
        </div>
    </form>
</div>