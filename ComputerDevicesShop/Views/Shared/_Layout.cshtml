@{
    var UserAuth = ViewBag.UserAuth as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/jquery.rateyo.css">
</head>
<body>
    <div class="wrapper">
        <header class="header">
            <div class="header--deco"></div>
            <div class="container">
                <div class="header__inner">
                    <a class="header__logo" href="#">
                        <img src="~/img/logo.jpg" alt="logo">
                    </a>
                    <nav class="header__nav">
                        <ul class="header__list">
                            <li class="header__item">
                                <a href="/Home" class="header__link">Главная</a>
                            </li>
                        </ul>
                        <div class="header__profile">
                            <a class="header__cart" asp-controller="Cart" asp-action="UserCart">
                                <img src="~/img/icons/cart.svg" alt="cart">
                            </a>
                            @if (!(UserAuth is null))
                            {
                                <a class="header__user" style="display:flex" asp-controller="Account" asp-action="Profile">
                                    <p class="main__user-text" style="margin-right: 15px">
                                        @UserAuth
                                    </p>
                                    <a class="button" style="margin: 0" asp-controller="Account" asp-action="Logout">
                                        Выход
                                    </a>
                                </a>
                            }
                            else
                            {
                                <a class="header__user" asp-controller="Account" asp-action="Login">
                                    <img src="~/img/icons/user.svg" alt="user">
                                </a>
                            }
                        </div>
                    </nav>
                </div>
            </div>
        </header>
        <main class="main">
            <div class="container">
                @RenderBody()
            </div>
        </main>
        <footer class="footer">
            <div class="footer--deco"></div>
            <div class="container">
                <div class="footer__inner">
                    <p class="footer__text">Все права защищены</p>
                </div>
            </div>
        </footer>
    </div>
    <script src="~/js/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", required: false)
    <script src="~/js/site.js"></script>
    <script src="~/js/jquery.rateyo.js"></script>
</body>
</html>